<UserControl
    x:Class="PanoramioClient.ImagePushpin"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PanoramioClient"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400"
    DataContext="{Binding Source={StaticResource Locator}, Path=PushpinViewModel}">

    <FlipView ItemsSource="{Binding Path=ThumbnailsImages}" HorizontalAlignment="Stretch" Height="200">
        <FlipView.ItemTemplate>
            <DataTemplate>
                <Image Source="{Binding}" Stretch="UniformToFill"></Image>
            </DataTemplate>
        </FlipView.ItemTemplate>
    </FlipView>
</UserControl>
